package kr.or.bank;

import java.util.Random;

public class Lotto {
	private int [] lotto;
	
	public Lotto(int size) {
		this.lotto = new int[size];
	}
	
	public void generateLotto() {
		Random r = new Random();
		for(int i = 0 ; i < this.lotto.length ; i++) {
			this.lotto[i] = r.nextInt(45)+1;
			if(i > 0) {
				for(int j = 0 ; j < i ; j++) {
					if (this.lotto[j] == this.lotto[i])
						lotto[i] = r.nextInt(45)+1;
				}
			}
		}
	}
}
