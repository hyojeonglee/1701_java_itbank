package kr.or.bank;

public class AirPlane {
	private String aname;
	private String anum;
	static int allnum;
	
	public AirPlane(String aname, String anum) {
		this.aname = aname;
		this.anum = anum;
		allnum++;
	}
	
	public void printAirPlane() {
		System.out.printf("이름 : %s 번호 : %s\n", this.aname, this.anum);
	}
	
	public void printAllNum() {
		System.out.println("비행기는 총 " + allnum + "대 입니다.");
	}
}
