
public class Ex0113_Operators {
	public static void main(String[] args) {
		// 연산 규칙
		// 자바는 정수의 모든 연산을 int로 변환시킨다!
		// byte + byte => int + int
		byte b = 10;
		byte c = 10;
		// byte d = b + c; 안된다! 경고 메시지 : add cast to "byte"
		// 해결방법
		byte d = (byte)(b + c);
		int e = b + c;
		
		// byte + short => int + int
		// char + char => int + int
		
		// float + int => float + float
		// float + long => float + float
	}
}
